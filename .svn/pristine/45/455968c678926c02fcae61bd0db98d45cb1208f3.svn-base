@CHARSET "UTF-8";

.layui-layer-ext .layui-layer-title {
    background: #fff;
    color: #111;
    border: none;
    padding: 0 80px 0 10px;
    border-top: 3px solid #e15b52;
    border-bottom: 1px solid #eee;
}

.layui-layer-ext .layui-layer-btn a {
	background: #e15b52;
	border:none;
	border-radius: 0;
}

.layui-layer-ext .layui-layer-btn .layui-layer-btn1 {
    height: 28px;
    line-height: 28px;
    margin: 0 6px;
    padding: 0 15px;
    border: 1px solid #dedede;
    background-color: #f1f1f1;
    color: #333;
    font-weight: 400;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    vertical-align: top;
}
.layui-layer-ext .layui-layer-setwin .layui-layer-close1{
	background-position:1px -40px;
}
.layui-layer-title >i.iconfont {
    color: #e15b52;
}

/* tipså±‚ */
.layui-layer-tips .layui-layer-content {
	background-color: #e15b52;
}