@charset "utf-8";
@tblHeadBkColor:#ebebeb;
@tblOddBkColor:#ffffff;
@tblEvenBkColor:#f5f6f8;
@tblHoverBkColor:#efefef;
@tblHoverColor:#000000;
/*easyui 表格样式修改*/
.datagrid-row {
    background: @tblOddBkColor;
}
.datagrid-row-alt {
    background: @tblEvenBkColor;
}
.datagrid-row-over{
  background: @tblHoverBkColor;
  color: @tblHoverColor;
}
.datagrid-header td.datagrid-header-over{
  background: @tblHeadBkColor;
  color: @tblHoverColor;
}
.datagrid-header td, .datagrid-body td, .datagrid-footer td {
    border-color: #fff;
    border-style: solid;
    border-width: 0 1px 0 0;
}
.datagrid-header tr:first-child td:last-child, .datagrid-body tr td:last-child, .datagrid-footer tr td:last-child {
    border: none;
}
.datagrid-header, .datagrid-toolbar, .datagrid-pager, .datagrid-footer-inner {
    border-color: transparent;
}
.datagrid-header{
    background: @tblHeadBkColor;
}
.datagrid-td-rownumber{
    background: transparent;
}
.datagrid-toolbar{
    padding: 0;
    border: none;
    
    table {
        float: right;
    }
    .l-btn-plain {
       background-color: transparent;
       color: #e15b52;
       
       &:hover {
           background-color: transparent;
           color: #e15b52;
           
           .datagrid-addBtn {
               > span {
                   text-decoration: underline;
               }
           }
       } 
    }
}
.datagrid-header-row, .datagrid-row {
    height: 34px;
}
.pagination{
    border-radius: 0;
}
.datagrid-sort .datagrid-sort-icon {
    background: url(../../dist/img/easyui/tableSortBk.png) no-repeat left 1px;
    margin-left: 7px;
}
.datagrid-sort-desc .datagrid-sort-icon {
    background-position: -90px 1px;
}
.datagrid-sort-asc .datagrid-sort-icon {
    background-position: -45px 1px;
}
.datagrid .panel-body{
    padding: 8px 0;
}
.datagrid-btable,
.datagrid-htable {
    .iconfont {
        color: #e15b52;
        font-size: 14px;
        cursor: pointer;
        
        &.icon-delBtn {
            position: relative;
            top: 1px;
        }
    }
}
.datagrid-btable,
.datagrid-htable {
    .cm-checkbox {
        text-align: center;
        
        .cm-checkbox-label {        
            top: -14px;
        }
    }
    
}

.pagination-info {
    margin-right: 20px;
}
.l-btn-icon-left .l-btn-text {
    margin: 0 4px;
}
.l-btn-icon,.pagination-info{
    display: none;
}
.datagrid-pager{
    background:transparent;
}
.pagination table {
    float: right;
    right: 20px;
    position: relative;
}
.pagination-link,.l-btn-plain{
    background-color: #f3f3f3;
}
.l-btn-plain:hover,.l-btn,.l-btn-plain{
    border: none;
    padding: 1px 8px;
    border-radius: 0;
    margin-right: 3px;
}
.l-btn-plain-selected, .l-btn-plain-selected:hover, .pagination-link:hover, .l-btn-plain:hover{
    color: #fff;
    background-color: #ed5a56;
}
.l-btn-plain-disabled, .l-btn-plain-disabled:hover{
    background-color: #f7f7f7;
    color: #666;
}
.pagination-links .l-btn{
    padding: 0;
}
.datagrid .datagrid-pager{
    padding-top: 8px;
}

