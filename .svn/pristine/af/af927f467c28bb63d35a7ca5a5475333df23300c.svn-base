/*easyui 表格样式修改*/
.datagrid-row {
  background: #ffffff;
}
.datagrid-row-alt {
  background: #f5f6f8;
}
.datagrid-row-over {
  background: #efefef;
  color: #000000;
}
.datagrid-header td.datagrid-header-over {
  background: #ebebeb;
  color: #000000;
}
.datagrid-header td,
.datagrid-body td,
.datagrid-footer td {
  border-color: #fff;
  border-style: solid;
  border-width: 0 1px 0 0;
}
.datagrid-header tr:first-child td:last-child,
.datagrid-body tr td:last-child,
.datagrid-footer tr td:last-child {
  border: none;
}
.datagrid-header,
.datagrid-toolbar,
.datagrid-pager,
.datagrid-footer-inner {
  border-color: transparent;
}
.datagrid-header {
  background: #ebebeb;
}
.datagrid-td-rownumber {
  background: transparent;
}
.datagrid-toolbar {
  padding: 0;
  border: none;
}
.datagrid-toolbar table {
  float: right;
}
.datagrid-toolbar .l-btn-plain {
  background-color: transparent;
  color: #e15b52;
}
.datagrid-toolbar .l-btn-plain:hover {
  background-color: transparent;
  color: #e15b52;
}
.datagrid-toolbar .l-btn-plain:hover .datagrid-addBtn > span {
  text-decoration: underline;
}
.datagrid-header-row,
.datagrid-row {
  height: 34px;
}
.pagination {
  border-radius: 0;
}
.datagrid-sort .datagrid-sort-icon {
  background: url(../../dist/img/easyui/tableSortBk.png) no-repeat left 1px;
  margin-left: 7px;
}
.datagrid-sort-desc .datagrid-sort-icon {
  background-position: -90px 1px;
}
.datagrid-sort-asc .datagrid-sort-icon {
  background-position: -45px 1px;
}
.datagrid .panel-body {
  padding: 8px 0;
}
.datagrid-btable .iconfont,
.datagrid-htable .iconfont {
  color: #e15b52;
  font-size: 16px;
  cursor: pointer;
  margin: 0 4px;
}
.datagrid-btable .iconfont.icon-delBtn,
.datagrid-htable .iconfont.icon-delBtn {
  position: relative;
  top: 1px;
}
.datagrid-btable .cm-checkbox,
.datagrid-htable .cm-checkbox {
  text-align: center;
}
.datagrid-btable .cm-checkbox .cm-checkbox-label,
.datagrid-htable .cm-checkbox .cm-checkbox-label {
  top: -14px;
}
.pagination-info {
  margin-right: 20px;
}
.l-btn-icon-left .l-btn-text {
  margin: 0 4px;
}
.l-btn-icon,
.pagination-info {
  display: none;
}
.datagrid-pager {
  background: transparent;
}
.pagination table {
  float: right;
  right: 20px;
  position: relative;
}
.pagination-link,
.l-btn-plain {
  background-color: #f3f3f3;
}
.l-btn-plain:hover,
.l-btn,
.l-btn-plain {
  border: none;
  padding: 1px 8px;
  border-radius: 0;
  margin-right: 3px;
}
.l-btn-plain-selected,
.l-btn-plain-selected:hover,
.pagination-link:hover,
.l-btn-plain:hover {
  color: #fff;
  background-color: #ed5a56;
}
.l-btn-plain-disabled,
.l-btn-plain-disabled:hover {
  background-color: #f7f7f7;
  color: #666;
}
.pagination-links .l-btn {
  padding: 0;
}
.datagrid .datagrid-pager {
  padding-top: 8px;
}
.datagrid-header-check input,
.datagrid-cell-check input {
  margin: 0;
  left: -15px;
  position: absolute;
  text-indent: 21px;
  line-height: 24px;
  cursor: pointer;
}
.datagrid-header-check.active input:after,
.datagrid-row-checked .datagrid-cell-check input:after {
  content: '\e600';
  top: -2px;
  border: 1px solid #e15b52;
}
.datagrid-header-check input:after,
.datagrid-cell-check input:after {
  content: '';
  top: 0;
  left: 0;
  height: 14px;
  display: inline-block;
  width: 14px;
  font-family: 'iconfont';
  font-size: 14px;
  color: #e15b52;
  border: 1px solid #acacac;
  text-indent: -1px;
  position: relative;
  line-height: 14px;
}
/* 复选框 */
/*easyui 表格样式结束*/
