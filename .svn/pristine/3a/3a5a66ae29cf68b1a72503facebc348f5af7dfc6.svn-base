/*定义变量*/
@bodyBk: #E8ECF0;               // body默认背景色            
@mainColor: #e15b52;            // 布局主色调
@actColor: #c73c37;             // 活动状态的主色调
@coColor: #ff6e07;              // ????
@mainFont: 14px;                // 主要内容字号
@secFont: 12px;                 // 次要内容字号
@size: 10px;                    
@percent: 100%;

.mgrPad(@mar:0,@pad:0) {        // margin、padding默认均为0
  margin: @mar;
  padding: @pad;
}
.mar(@t:0,@r:0,@b:0,@l:0) {        // margin -- 默认四个方向均为0
    margin: @t @r @b @l;
}
.pad(@t:3px,@r:8px,@b:3px,@l:8px) {       // padding -- 默认上下3px，左右8px
    padding: @t @r @b @l;
}
.w(@w:@percent) {               // 宽 -- 默认100%
    width: @w;
}
.h(@h:@percent) {               // 高 -- 默认100%
    height: @h;
}

.noUnderLine(@line:none) {       // 默认无下划线
  text-decoration: @line;
}
.noOutline(@ol:none) {           // 默认无outline虚线
    outline: @ol;
}
.noBor(@b:none) {                // 默认无边框
    border: @b;
}
.noShadow(@s:none) {             // 默认无阴影
    box-shadow: @s;
}
.color(@c:#333) {                // 文字颜色color -- 默认#333
  color: @c;
}
.bg(@bc:@mainColor) {            // 背景色 -- 默认主色
  background-color: @bc;
}
.bor(@color:#ccc,@width:1px,@style:solid) {   // 边框border -- 默认1px solid #ccc
    border: @color @width @style;
}
.rgba(@r,@g,@b,@a) {          // 背景透明度
  background-color: rgba(@r,@g,@b,@a);
  @c: rgba(@r,@g,@b,@a); 
  @c2 :argb(@c);                    /*处理IE8兼容*/
  filter:~"progid:DXImageTransform.Microsoft.gradient(enabled='true',startColorstr='@{c2}', endColorstr='@{c2}')";
  :root #ie9-filter {               /*在IE9下使用hack去除filter*/
    filter: none;
  }
}
.radius(@r:50%) {            // 圆角 -- 默认正圆
  -webkit-border-radius:@r;
  -moz-border-radius:@r;
  -ms-border-radius:@r;
  -o-border-radius:@r;
  border-radius:@r;
}
.pos(@pos:relative) {   // 定位 -- 默认relative
  position: @pos;
}
.abs50(@percent) {     // 绝对定位 -- 默认水平、垂直居中
  .pos(absolute);
  .pl(@percent / 2);
  .pt(@percent / 2);
}
.pl(@l:0) {            // left -- 默认0
    left: @l;
}
.pr(@r:0) {            // right -- 默认0
    right: @r;
}
.pt(@t:0) {            // top -- 默认0
    top: @t;
}
.pb(@b:0) {            // bottom -- 默认0
    bottom: @b;
}
.overflow(@flow:hidden) {    // overflow -- 默认hidden
  overflow: @flow;
}
.dis(@dis:inline-block) {    // display -- 默认inline-block
  display: @dis;
}
.align(@a:center) {         // text-align -- 默认center
  text-align: @a;
}
.verAlign(@v:middle) {      // vertical-align -- 默认middle  
    vertical-align: @v;
}
.cursor(@cur:pointer) {     // 鼠标光标cursor -- 默认小手
  cursor: @cur;
}
.cm-forbid {
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Chrome/Safari/Opera */
    -khtml-user-select: none; /* Konqueror */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none; /* Non-prefixed version, currently not supported by any browser */
}

@font-face {
    font-family: "iconfont";
    src: url('../lib/iconfont/iconfont.eot');
    /* IE9*/
    src:/* IE6-IE8 */
    /* chrome, firefox */
    /* chrome, firefox, opera, Safari, Android, iOS 4.2+*/
    url('../lib/iconfont/iconfont.eot#iefix') format('embedded-opentype'),url('../lib/iconfont/iconfont.woff') format('woff'),url('../lib/iconfont/iconfont.ttf') format('truetype'),url('../lib/iconfont/iconfont.svg#iconfont') format('svg');
    /* iOS 4.1- */
}
* {
    .mgrPad;
    font-family: PingFangSC-Light, 'helvetica neue', 'hiragino sans gb', tahoma, 'microsoft yahei ui', 'microsoft yahei', simsun, sans-serif;
    font-size: @secFont;
}
body {
    .bg(@bodyBk);
    .color;
}
h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: normal;
    .mgrPad;
}
h2 {
    font-size: @mainFont + 2;
}
h3 {
    font-size: @mainFont;
}
ul,
ol,
li,
dl,
dt,
dd {
    .mgrPad;
}
/* 有时不生效，需要再次清除margin和padding */
li,
dt,
dd {
    list-style: none;
}
a {
    .color;
    .noUnderLine;
    
    &:focus {
        .noOutline;
        .color(@mainColor);        
    }
    &:link,
    &:visited {
        .noUnderLine;
    }
    &:hover {
        .noUnderLine;
        .color(@mainColor);
    }
    &:active {
        .noUnderLine;
    }
    
}
/* IE下点击a标签去掉虚线边框 */
img {
    .verAlign(top);
}
input,
button,
textarea {
    .noOutline;
}
button {
    .noBor;
    .noOutline;
}
label {
    font-weight: normal;
}
i {
    font-style: normal;
}
.iconfont {
    font-family: "iconfont" !important;
    font-size: @mainFont;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}

.cm {
    /* 浮动 */
    &-clearfix {
        &:after {
            .dis(block);
            content: '';
            clear: both;
        }
    }
    &-fl {
        float: left;
    }
    &-fr {
        float: right;
    }
    /* 表单 */
    &-form {
        &-title {
            .w;
            .h(34px);
            border-bottom: 2px solid #eee;
            .mar(0,0,20px);
            
            span {
                .pos;
                .dis;
                .h;
                font-size: @mainFont;
                line-height: 34px;
                
                &:before {
                    content: '';
                    .w;
                    .h(2px);
                    .bg;
                    .pos(absolute);
                    .pb(-2px);
                }
            }
        }
        
        &-readonly {
            .h(26px);
            .bg(#eee);
            .bor;
            .radius(0);
            .pad;
            .noShadow;
        }
        
        
        &-area {
            .w(420px);
            .h(90px);
            .color;
            .bg(#fff);
            .bor;
            .pad;
            resize: none;
        }
        &-editDiv {
            .dis;
            .w(420px);
            min-height: 90px;
            .color;
            .pad;
            .bg(#fff);
            .bor;
            .noOutline;
        }
        
        /* 仅适用于面板头部的搜索区 */
        &-wrap {
            .w;
        }
        &-wrap {
            > li {
                .mar(0,0,10px);
                
                > label {
                    .w(105px);
                    .align(right);
                    .pad(0,5px);
                    .mar(3px);        
                    .verAlign(top);
                }
                
                > div {
                    .dis;
                }
            }          
        }       
        
    }
    
    /* 必填星号 */
    &-sign {
        .color(@mainColor);
        .pos;
        .pt(2px);
    }
    
    /* 下拉框 */
    &-select {
        &-wrap {
            .w(158px);
            .pos;
            .bor;
        }
        &-wrap {
            .cm-form-select {
                .w;
                .h(26px);
                .bg(#fff);
                .color;
                .noBor;
                .cursor;
                .pad(3px,24px);
            }
        }
        &-btn {
            .color(#aaa);
            .pos(absolute);
            .pr(6px);
            .pt(@percent / 2);
            .cursor;
            .mar(-9px);
            transition: 0.4s all ease;
            .cm-forbid;
        }        
    }
    &-selectBox-Wrap {
        .dis(none);
        .pos(absolute);
        left: -1px;
        top: 27px;
        width: 158px;
        max-height: 200px;
        .bg(#fff);
        .bor;
        border-top: none;
        z-index: 9;
        
        > li {
            height: 30px;
            line-height: 30px;
            padding: 0 8px;
            .cursor;
            
            &:hover {
                background-color: #fce2e2;
                color: #d43f3a;
            }
        }
    }
    
    /* 树状菜单 */
    &-menu-content {
        .dis(none);
        .pos(absolute);
        left: -1px !important;
        top: 26px !important;
        max-height: 300px;
        .bor;
        .bg(#fff);
        z-index: 9;
    }
    &-dialog-wrap {
        padding: 15px 20px 20px;
        .dis(none);
    }
    
    /*按钮公共样式*/
    /*红色背景深红边框的button*/
    &-redBtn {
        .bg;
        .color(#fff);
        .pad(4px,6px,4px,25px);
        .h(26px);
    }
    &-redBtn {
        &:hover,
        &:focus,
        &:active {
            .bg(@actColor);
        }
    }
    &-btn-i {
        .pad;
    }
    &-btn-i {
        > i {
            .mar(0,4px);
            font-size: @secFont + 1;
        }
    }
    &-searchWrap {
        float: left;
        .pad(0,0,0,15px);
        .mar(0,0,10px);
    }
    /* 提示按钮 */
    &-tips {
        font-size: @mainFont + 6;
        .color(@mainColor);
        .cursor;
    }
    &-tips {
        &:hover {
            .color(@actColor);
        }
    }
}
/*================================下面是定义插件的样式修改====================================*/
/***重写bootstrap的样式*/
.container-fluid {
    .mar(10px);
}
.panel {
    .radius(0);
    .h;
    
    &-default {
        border-color: #fff;
    }
    &-heading {
        .bg(#fff);
        border-bottom-color: #ddd;
    }
    &-body {
        min-height: 300px;
    }
}
.form-inline {
    .form-control {
        .dis;
        .h(26px);
        .color;
        .pad;
        .bg(#fff);
        .bor;
        .radius(0);
        .noShadow;
    }  
    
    .input-medium {
        .w(200px);
    } 
    
    .input-small {
        .w(50px);
    } 
    
    > .form-group {
        .dis;
        .verAlign;
        .mar(0,20px,10px);
    }
}
.form-control:focus,
.cm-form-area:focus,
.cm-form-editDiv:focus {
    border-color: #d43f3a;
    .bg(#fffdfd);
    .noShadow;
}

/* webuploader插件上传文件 */
.picker {
    .mar(0,10px);
}
.webuploader-container {
    .webuploader-pick {
        .bg;
        .color(#fff);
        .pad(4px,6px,4px,6px);
        .h(26px);
        .radius(0);
        
        .iconfont {
            .mar(0,3px);
        }
    }    
} 


/* datatables样式改造 */
.dataTables_wrapper {
    .dataTable {
        border-collapse: collapse;
        border-spacing: 0;
        table-layout: fixed;
        
        tr {
            .bor(#eceff8);
            .h(40px);
        }
        
        th, td {
            .pad(0,0,0,16px);
            white-space: nowrap;
            text-overflow: ellipsis;
            .overflow;
            border-right: 1px solid #fff;
            
            &:last-child {
                border-right: none;
            }
        }
        
        thead {
            th, td {
                .bg(#f2f2f2);
                border-bottom: none;
                font-weight: normal;
                border-right: 1px solid #fff;
            }
        }
    }    
} 
.dataTable {    
    tbody {
        tr {
            &:nth-child(even) {
                .bg(#f9f9f9);
                
                > th, > td {
                    border-right: 1px solid #f9f9f9;
                }
            }    
        }
    }
}


.dataTables_wrapper .dataTable tbody> tr:hover {
    .bg(#f5f5f5);
}
.dataTables_wrapper .dataTable tbody> tr:hover> th,
.dataTables_wrapper .dataTable tbody> tr:hover> td {
    border-right-color: #fff;
}
table.dataTable td> i.iconfont,
table.dataTable td> a> i.iconfont {
    .color(#434343);
}
table.dataTable td> a> i.icon-auth {
    font-size: @secFont;
    .pos;
    .pt(-2px);
}
.dataTable tr> td> a> i.iconfont:hover,
.dataTable tr> td> a> i.iconfont:active,
.dataTable tr> td> a> i.iconfont:focus {
    .color(#d9534f);
}
/* 分页 */
.dataTables_wrapper .dataTables_paginate {
    .mar(20px,0,20px,0);
}
.panel-body .dataTables_wrapper .dataTables_paginate .paginate_button {
    .bg(#f3f2f3);
    .radius(0);
    .pad(.2em,.7em,.2em,.7em);
}
.dataTables_wrapper .dataTables_paginate .paginate_button:hover,
.dataTables_wrapper .dataTables_paginate .paginate_button.current,
.dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
    .bg(#ed5b56);
    border-color: transparent;
    color: #fff !important;
    .noShadow;
}
.dataTables_wrapper .dataTables_paginate .paginate_button.disabled,
.dataTables_wrapper .dataTables_paginate .paginate_button.disabled:hover,
.dataTables_wrapper .dataTables_paginate .paginate_button.disabled:active {
    opacity: 0.6;
    filter:alpha(opacity=60);
    .bg(#f3f2f3);
}
/*ztree树的右键样式*/
.dropdown-menu> li> a> i.glyphicon {
    .color(#f39800);
    .pad(0,3px);
}
.dropdown-menu> li> a {
    .pad(3px,16px,3px,12px);
}
.dropdown-menu {
    min-width: 112px;
}